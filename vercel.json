{
  "rewrites": [
    {
      "source": "/api/home",
      "destination": "/api/server"
    },
    {
      "source": "/api/audio-upload",
      "destination": "/api/server"
    },
    {
      "source": "/api/stitch-and-return-audio",
      "destination": "/api/server"
    }
  ],
  "functions": {
    "api/server.py": {
      "runtime": "python3.12",
      "memory": 1024,
      "maxDuration": 30,
      "includeFiles": ["audio_resnet_model_best.pth", "dataset_train.csv"],
      "systemPackages": ["libgtk-3-dev", "ffmpeg"]
    }
  },
  "build": {
    "env": {
      "PYTHON_VERSION": "3.12.2"
    }
  }
}
